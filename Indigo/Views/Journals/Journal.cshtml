@using Indigo.Constants;
@model Journal;

@{
    ViewData["Title"] = "Списание";
}

<div class="container text-center">
    <div class="row mb-5">
        <div class="col-4">
            <img src="@Model.ImageUrl" style="height: 30rem; width: 420px; border: 10px solid #431264;">
        </div>
        <div class="col-8">
            <h1>@Model.Title</h1>
            <p style="text-align:justify">@Model.Description</p>
            <p>@Model.CreationDate.ToShortDateString()</p>
            <p></p>
        </div>
    </div>
    <div class="mb-5">
        <div class="mb-5">
            <a asp-controller="Publications" asp-action="Index" class="btn text-light" asp-route-journalId="@Model.Id">Публикации</a>
        </div>
        
        <a asp-controller="Journals" asp-action="Index" class="btn btn-md text-light">Назад</a>
        
    </div>
