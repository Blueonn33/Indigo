@model Indigo.ViewModels.PublicationViewModel;

@{
    ViewData["Title"] = "Създаване";
}

<head>
    <link rel="stylesheet" href="~/css/Publications/Create.css" asp-append-version="true" />
</head>

<h1 class="text-center heading">Създаване на публикация</h1>

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Title" class="fs-5 form-label">Заглавие</label>
        <input asp-for="Title" class="form-control" type="text" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Topic" class="fs-5 form-label">Тема</label>
        <input asp-for="Topic" class="form-control" type="text" />
        <span asp-validation-for="Topic" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="fs-5 form-label">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="fs-5 form-label">Съдържание</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AuthorName" class="fs-5 form-label">Име на автор</label>
        <textarea asp-for="AuthorName" class="form-control"></textarea>
        <span asp-validation-for="AuthorName" class="text-danger"></span>
        <input type="hidden" name="journalId" value="@ViewBag.JournalId" />
    </div>
    <div class="d-grid col-3 mx-auto">
        <button type="submit" class="btn btn-primary">Създай</button>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}